<h2>{{model.name}}</h2>
<h3>Seating Charts</h3>
<ul>
  {{#each (await model.seatingCharts) as |seatingChart|}}
    <li>
      {{#link-to 'seatingchart' seatingChart}}{{seatingChart.name}}{{/link-to}}
    </li>
  {{else}}
    <li>None</li>
  {{/each}}
</ul>
{{one-way-input newSeatingChartName update=(action (mut newSeatingChartName))}}
<button {{action 'createNewSeatingChart'}}>Add</button>

<h3>Classroom Layout</h3>
{{#if isManagingLayout}}
  <button  {{action (toggle 'isManagingLayout' this)}}>Done</button>
  <button {{action 'createNewDesk'}}>Create Desk</button>
  {{classroom-layout-manager desks=(await model.desks)}}
{{else}}
  <button {{action (toggle 'isManagingLayout' this)}}>Manage</button>
  {{classroom-layout desks=(await model.desks)}}
{{/if}}
