<h2>Your Classrooms</h2>
<ul>
  {{#each classrooms as |classroom|}}
    <li>
      {{#link-to 'classroom' classroom}}
        {{classroom.name}}
      {{/link-to}}
      <button {{action 'deleteClassroom' classroom}}>Delete</button>
    </li>
  {{else}}
    <li>None</li>
  {{/each}}
</ul>
{{one-way-input newClassroomName update=(action (mut newClassroomName))}}
<button {{action 'createNewClassroom'}}>Add</button>
